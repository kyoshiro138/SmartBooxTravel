<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Toolbar -->
    <style name="stl_toolbar_navigate_button_style">
        <item name="android:layout_width">@dimen/d_toolbar_image_button_size</item>
        <item name="android:layout_height">@dimen/d_toolbar_image_button_size</item>
        <item name="android:padding">@dimen/d_toolbar_image_button_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">@dimen/d_toolbar_horizontal_margin</item>
    </style>

    <style name="stl_toolbar_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/d_toolbar_title_left_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Menu -->
    <style name="stl_menu_user_avatar_style">
        <item name="android:layout_width">@dimen/d_menu_avatar_image_size</item>
        <item name="android:layout_height">@dimen/d_menu_avatar_image_size</item>
        <item name="android:background">@drawable/shape_menu_avatar</item>
    </style>

    <style name="stl_menu_user_email_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_menu_user_info_height</item>
        <item name="android:layout_marginLeft">@dimen/d_menu_margin</item>
        <item name="android:layout_marginRight">@dimen/d_menu_margin</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- COLOR -->
    <color name="c_material_button_flat_light_pressed">#6999</color>
    <color name="c_material_button_raised_light">#1f000000</color>
    <color name="c_material_button_raised_light_pressed">#42000000</color>
    <color name="c_material_button_raised_light_disabled">#1f000000</color>
    <color name="c_material_button_raised_primary">@color/c_primary_color500</color>
    <color name="c_material_button_raised_primary_pressed">@color/c_primary_color700</color>
    <color name="c_material_button_raised_primary_disabled">#1fffffff</color>

    <!-- DIMENSION -->
    <dimen name="d_material_button_height">48dp</dimen>
    <dimen name="d_material_button_inset">6dp</dimen>
    <dimen name="d_material_button_padding">8dp</dimen>
    <dimen name="d_material_button_corner_radius">2dp</dimen>

    <!-- STYLE -->
    <style name="stl_material_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/d_material_button_height</item>
        <item name="android:paddingLeft">@dimen/d_material_button_padding</item>
        <item name="android:paddingRight">@dimen/d_material_button_padding</item>
    </style>
</resources>